<section class="homePosts">
    <% page.posts.each((post, i)=> { %>
        <div class="postItem">
            <div class="postItemInfo">
                <h2>
                    <a href="<%- post.link ? post.link : url_for(post.path) %>" class="postTitle">
                        <%= post.title ? post.title : "No Title" %>
                    </a>
                </h2>
                <% if (post.excerpt) { %>
                    <p class="postExcerpt">
                        <%= strip_html(post.excerpt) %>
                    </p>
                    <% } else { %>
                        <p class="postExcerpt">
                            <%= truncate(strip_html(post.content), { length: 100 }) %>
                        </p>
                        <% } %>
                            <div class="postMeta">
                                <time class="date">
                                    <%= date(post.date, "YYYY.MM.DD" ) %>
                                </time>
                                <% if (post.categories && post.categories.length){ %>
                                    <span class="postCategory"><%- list_categories(post.categories, { show_count: false,
                                            class: "" , style: "none" , separator: ", " }) %></span>
                                    <% } %>
                                        <% if (post.tags && post.tags.length){ %>
                                            <span class="postTags"><%- list_tags(post.tags, { show_count: false,
                                                    class: "" , style: "none" , separator: ", " }) %></span>
                                            <% } %>
                            </div>
            </div>
        </div>
        <% }) %>
</section>
<section class="pageNavigator">
    <%- paginator({ prev_text: "<-" , next_text: "->" }) %>
</section>